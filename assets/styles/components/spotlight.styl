.spotlight 
  position relative
  margin spacing-large auto
  display flex
  flex-direction column
  align-items center
  width 600px
  color white
  margin-top 150px

.spotlight-content-link 
  color white
  text-decoration none
  text-align center

.spotlight-title 
  heading(30px)
  borderify-reverse(white)
  display inline 
  
.spotlight-excerpt 
  text-align center
  margin-top spacing

.spotlight-tag 
  text-transform uppercase
  font-family font-family-regular
  transition color .2s ease-in-out
  &:hover
    color rgba(255, 255, 255, 0.6)

.spotlight-meta 
  margin-bottom spacing
  a
    color #fff
    text-decoration none
    transition color .2s ease-in-out
    &:hover
      color rgba(255, 255, 255, 0.6)