.floating-header {
  visibility: hidden;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  color: rgba(255, 255, 255, 0.8);
  height: 60px;
  border-bottom: rgba(0, 0, 0, 0.06) 1px solid;
  background: rgba(38, 38, 38, 0.95);
  transition: all 500ms cubic-bezier(0.19, 1, 0.22, 1);
  transform: translate3d(0, -120%, 0);

  &__container {
    display: flex;
    flex-flow: row wrap;
    width: 100%;
    align-items: center
  }
}

.floating-active {
  visibility: visible;
  transition: all 500ms cubic-bezier(0.22, 1, 0.27, 1);
  transform: translate3d(0, 0, 0);
}

.floating-header-logo {
  overflow: hidden;
  margin: 0;
  font-size: 1.6rem;
  line-height: 1em;
}

.floating-header-logo a {
  display: flex;
  align-items: center;
  line-height: 1.1em;
  font-family: font-family-regular;
}

.floating-header-logo a:hover {
  text-decoration: none;
}

.floating-header-logo img {
  margin: 0 10px 0 0;
  max-height: 20px;
}

.floating-header-divider {
  margin: 0 5px;
  line-height: 1em;
}

.floating-header-title {
  flex: 1;
  overflow: hidden;
  margin: 0;
  font-size: 1.6rem;
  font-family: font-family-regular;
  line-height: 1.3em;
  font-weight: bold;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.floating-header-share {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-left: 2%;
  font-size: 1.3rem;
  line-height: 1;
  font-family: 'PT Serif';
  
  a {
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
    font-size: 3rem;
  }

  svg {
    width: auto;
    height: 16px;
    fill: #fff;
  }

  &__label {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    margin-right: 10px;
    font-size: 1.6rem;

    .point-right {
      font-size: 2rem;
      margin-top: -10px;
      margin-left: 10px;
    }

  }

  &__link {
    display: block;
    align-items: center;
    width: 60px;
    height: 60px;
    color: #fff;
    line-height: 48px;
    text-align: center;
    transition: all 500ms cubic-bezier(0.19, 1, 0.22, 1);
    opacity: 0.8;

    img {
      width: 30px;
      height: 30px;
    }

  }
}

.floating-header__share-label svg {
  margin: 0 5px 0 10px;
  width: 18px;
  height: 18px;
  stroke: rgba(0, 0, 0, 0.7);
  transform: rotate(90deg);
}

.floating-header-share-tw {
  background: #33b1ff;
}

.floating-header-share-fb {
  background: #005e99;
}

.progress {
  position: absolute;
  right: 0;
  bottom: -1px;
  left: 0;
  width: 100%;
  height: 2px;
  border: none;
  color: var(--blue);
  background: transparent;
  -webkit-appearance: none;
}

.progress::-webkit-progress-bar {
  background-color: transparent;
}

.progress::-webkit-progress-value {
  background-color: var(--blue);
}

.progress::-moz-progress-bar {
  background-color: var(--blue);
}

.progress-container {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 2px;
  background-color: transparent;
}

.progress-bar {
  display: block;
  width: 50%;
  height: inherit;
  background-color: var(--blue);
}

@media (max-width: 900px) {
  .floating-header {
    height: 40px;
  }
  .floating-header-title,
  .floating-header-logo {
    font-size: 1.5rem;
  }
  .floating-header-share-tw,
  .floating-header-share-fb {
    width: 40px;
    height: 40px;
    line-height: 38px;
  }
}

@media (max-width: 800px) {
  .floating-header-logo {
    margin-left: 10px;
  }
  .floating-header-logo a {
    color: #2e2e2e;
  }
  .floating-header-title,
  .floating-header-divider {
    visibility: hidden;
  }
}

@media (max-width: 450px) {
  .floating-header-share-label {
    display: none;
  }
}
