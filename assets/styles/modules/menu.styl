.menu {
  position: absolute;
  display: none;
  flex-flow: column wrap;
  flex-basis: 100%;
  justify-content: center;
  list-style: none;

  &.expand {
    display: flex;
    top: 100%;
    left: 0;
    width: 100%;
    z-index: 15;
    background: white;

    a {
      padding: base-spacing;
    }
  }

  @media tablet {
    display: flex
    position: relative
    flex-flow: row wrap;
  }
}

.menu a {
  font: font-headings;
  display: block;
  padding: 0 spacing;
  color: #1c0f06;
  text-decoration: none;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: all .2s ease-in-out;
  
	@media(max-width: 1470px) {
		font-size: 14px;
		padding-left: 20px;
  }
}

.menu-button {
  display: block;
  width: 4rem;

  z-index: 15;
  
  cursor: pointer;
  transition: all .2s ease-in-out;

  @media tablet {
    display: none;
  }

  div {

    width: 100%;
    height: 4px;
    margin-top: 8px;
    background-color: #000;
    transform: translateX(122px);
    transition: all .2s ease-in-out;

    &:first-child {
      margin-top: 0;
      transition: all .1s ease-in-out;
    }

    &:nth-child(3) {
      transition: all .3s ease-in-out;
    }

    @media all and (max-width:1170px) {
      transform: translateX(0px);
    }
  
  }

}

.menu-button.active div:first-child {
  transform: rotate(90deg) translateY(12px) translateX(12px);
  -webkit-transform: rotate(90deg) translateY(12px) translateX(12px);
  -moz-transform: rotate(90deg) translateY(12px) translateX(12px);
}
.menu-button.active div:nth-child(2) {
  transform: rotate(90deg) translateY(0px);
  -webkit-transform: rotate(90deg) translateY(0px);
  -moz-transform: rotate(90deg) translateY(0px);
}
.menu-button.active div:nth-child(3) {
  transform: rotate(90deg) translateY(-12px) translateX(-12px);
  -webkit-transform: rotate(90deg) translateY(-12px) translateX(-12px);
  -moz-transform: rotate(90deg) translateY(-12px) translateX(-12px);
}
.menu-button:hover {
  background-color: rgba(255, 255, 255, 0.1);
}
