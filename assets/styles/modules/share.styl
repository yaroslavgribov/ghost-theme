.share {
  display: flex;
  flex-direction: column;
  margin: spacing-large auto;
  width: 100%;
  font-family: font-family-regular;
  max-width: 800px;

  @media phone {
    flex-direction: row;
  }
}

.share-label {
  flex: 0;
  margin-bottom: base-spacing;

  @media phone {
    margin-bottom: 0;
  }
}

.share-list {
  flex: 1;
  display: flex;
  flex-direction: row;
  text-transform: uppercase;
  align-items: center;

  a {
    flex: 1 1 auto;
    flex-direction: row;
    text-align: center;
    text-decoration: none;

    border-right: solid 1px black;

    &:hover {
      opacity: 0.6
    }

    &:last-of-type {
      border-right: 0;
    }
  }
}