.backdrop {
  position: fixed;
  top: 0; right: 0; bottom: 0; left: 0;
  background-size: cover;
  background-repeat: no-repeat;
}

.slider {
  max-height: 530px;
  margin-bottom: 50px;
  overflow: hidden;

  img {
    width: 100%;
  }
}

.sidebar1 .last {
  border-bottom: 0px solid #e8e8e8;
}

.banner {
  width: 100%;
}

.mateblock {
  width: 100%;
  margin-bottom: 6%;
}

.post-feed {
  display: flex;
  flex-flow: row wrap;
  align-items: stretch;
  justify-content: space-between;
  margin: 0 -20px;
}

