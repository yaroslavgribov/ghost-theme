{{!-- This is the post loop - each post will be output using this markup --}}
<div class="mateblock post-feed">
    {{#get "posts" include="tags,author,excerpt" filter="featured:true" order="published_at desc"}}
        {{#foreach posts limit="1"}}
            <article class="block {{post_class}}">
                <a href="{{url}}">
                    <div class="rela">
                        <img src="{{image}}" alt="{{title}}" />

                        <span class="type">
                            {{#foreach tags limit="1"}}
                                {{name}}
                            {{/foreach}}
                        </span>
                    </div>
                    <h2 class="post-title">
                        {{title}}
                    </h2>
                    <span class="text"> {{excerpt words="20"}}... </span>
                </a>
                <!--<div class="comme">21</div>-->
            </article>
        {{/foreach}}
    {{/get}}
    {{#get "posts" include="tags, excerpt" filter="tags:-newsblock+image:-null" order="published_at desc"}}
        {{#foreach posts limit="10"}}
            <article class="block {{post_class}}">
                <a href="{{url}}">

                    <div class="rela post__image">
                        <img src="{{image}}" alt={{title}}"/>

                        <span class="type">
                            {{#foreach tags limit="1"}}
                                {{name}}
                            {{/foreach}}
                        </span>
                    </div>
                    <h2 class="post-title">
                        {{title}}
                    </h2>
                    <span class="text"> {{excerpt words="20"}}... </span>
                </a>

            </article>
        {{/foreach}}
    {{/get}}
</div>

{{#if pagination.pages}}
    <script>
        var maxPages = parseInt('{{pagination.pages}}');
    </script>
{{/if}}