<article class="post-card {{post_class}}">
  <a href="{{url}}">
    {{#unless noImage}}
      <figure class="post-card__image">
        <img srcset='{{img_url feature_image size="xs" format="webp"}} 160w,
                  {{img_url feature_image size="s" format="webp"}} 320w,
                  {{img_url feature_image size="m" format="webp"}} 600w,
                  {{img_url feature_image size="l" format="webp"}} 960w,
                  {{img_url feature_image size="xl" format="webp"}} 1200w,
                  {{img_url feature_image size="xxl" format="webp"}} 2000w'
          sizes='{{#if imageSizes}}{{imageSizes}}{{else}}320px{{/if}}' src='{{img_url feature_image size="m"}}'
          alt='{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}' {{#if lazyLoad}} loading="lazy"
          {{/if}}>
        <span class="type">
          {{#primary_tag}}
            {{name}}
          {{/primary_tag}}
        </span>
      </figure>
    {{/unless}}
    <div class="post-card__info">
      <h3 class="post-card__title">
        {{title}}
      </h3>
      <p class="post-card__excerpt">
        {{excerpt words="14"}}
      </p>
    </div>
  </a>
</article>