<article class="{{post_class}} bg-white">
  <a href="{{url}}" class="flex flex-col gap-4 h-full">
    <figure class="relative aspect-video shrink-0">
      <img srcset='{{img_url feature_image size="xs" format="webp"}} 160w,
                  {{img_url feature_image size="s" format="webp"}} 320w,
                  {{img_url feature_image size="m" format="webp"}} 600w,
                  {{img_url feature_image size="l" format="webp"}} 960w,
                  {{img_url feature_image size="xl" format="webp"}} 1200w,
                  {{img_url feature_image size="xxl" format="webp"}} 2000w' src='{{img_url feature_image size="m"}}'
        alt='{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}' {{#if lazyLoad}}loading="lazy"
        {{/if}} class="object-cover h-full w-full absolute inset-0">
    </figure>
    <div class="grow flex flex-col justify-between p-4 pt-0">
      <div>
        {{#if primary_tag}}
          <p class="text-sm">{{primary_tag.name}}</p>
        {{/if}}
        <h3 class="text-lg leading-6 font-bold font-sans uppercase text-gray-800">
          {{title}}
        </h3>
        <p class="font-serif line-clamp-2 my-3 text-gray-700">
          {{excerpt words="20"}}
        </p>
      </div>
      <footer class="text-slate-500 text-sm">
        <span class="">{{#foreach authors}}{{#if @first}}{{name}}{{else}},
              {{name}}{{/if}}{{/foreach}}</span>
        â€”
        <time class="" datetime="{{date format=" YYYY-MM-DD"}}">{{date}}</time>
      </footer>
    </div>
  </a>
</article>