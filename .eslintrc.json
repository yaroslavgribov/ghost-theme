{
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "semi": [2, "never"],
        "valid-typeof": "warn",
        "indent": ["error", 2],
        "no-console": "off",
        "max-len": ["error", 120],
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }],
        "prefer-const": [1]
    }
}