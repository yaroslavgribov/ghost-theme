{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
{{> "floating-header" }}
<main class="content content--post" role="main">
<article class="{{post_class}}">
    <div class="mateblock inside">
        <div class="block blockbig fullnew">
            <div class="rela post-header" style="background-img_url: url({{img_url}})">
                <div class="zatem">
                    <h class="main-post-title post-full-title">{{title}}</h>
                    {{#author}}
                        <section class="author">
                            <div class="text">
                                <a href="{{url}}" class="author__url">{{name}}</a>,
                                <span class="post-date"
                                        datetime="{{date published_at timeago="true" format="YYYY-MM-DD"}}">{{date
                                        updated_at format="DD MMMM YYYY"}}</span>
                            </div>
                        </section>
                    {{/author}}
                </div>

                <div class="type">{{tags limit="1"}}</div>
            </div>
            <div class="fulltext">
                {{content}}
            </div>
        </div>
    </div>
</article>

<aside class="share">
  {{#foreach tags}}
    <a href="{{url}}">@{{name}}</a>
  {{/foreach}}
</aside>

<aside class="read-next outer">
  <div class="inner">
    <h3>Похожие: </h3>
    <div class="read-next-feed">
      {{#get "posts" include="tags, author" filter="primary_tag:{{primary_tag.slug}}" limit="6"}}
        {{#foreach posts}}
          {{> "post-small" }}
        {{/foreach}}
      {{/get}}
    </div>
  </div>
</aside>
{{/post}}