{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

<main id="content" class="content js-content {{body_class}}" role="main">
<section class="highlight">
  <section class="news">
    {{#get "posts" include="tags" filter="primary_tag:newsblock"}}
      {{#foreach posts limit="6"}}
        <article class="post-card-small">
          {{#primary_tag}}
            <a href="{{slug}}" class="tag">{{name}}</a>
          {{/primary_tag}}
          <a href="{{url}}">
            {{title}}
            {{excerpt words="8"}}
          </a>
        </article>
      {{/foreach}}
    {{/get}}
    <a class="btn btn-sm" href="/tag/newsblock">
      Еще новости
    </a>
  </section>
  <section class="posts">
    {{#get "posts" include="tags, author, excerpt" filter="featured:true" order="published_at desc"}}
      {{#foreach posts limit="1"}}
        {{> "featured-post"}}
      {{/foreach}}
    {{/get}}
    </article>
  </section>
</section>

{{#get "posts" include="author,tags" filter="primary_tag:reviews"}}
  <section class="posts">
    <header class="posts-title">Рецензии: </header>
    <section class="posts-list">
    {{#foreach posts limit="6"}}
      {{> "post-card"}}
    {{/foreach}}
    </section>
  </section>
{{/get}}

{{#get "posts" include="author,tags" filter="primary_tag:movies"}}
  <section class="posts">
    <header class="posts-title">Про кино: </header>
    <section class="posts-list">
    {{#foreach posts limit="6"}}
      {{> "post-card"}}
    {{/foreach}}
    </section>
  </section>     
{{/get}}

{{#get "posts" include="author,tags" filter="primary_tag:shows"}}
  <section class="posts">
    <header class="posts-title">Про сериалы: </header>
    <section class="posts-list">
    {{#foreach posts limit="6"}}
      {{> "post-card"}}
    {{/foreach}}
    </section>
  </section> 
{{/get}}

{{#get "posts" include="author,tags" filter="primary_tag:events"}}
  <section class="posts">
    <header class="posts-title">Про события: </header>
    <section class="posts-list">
    {{#foreach posts limit="6"}}
      {{> "post-card"}}
    {{/foreach}}
    </section>
  </section> 
{{/get}}

{{#if pagination.pages}}
  <script>
    var maxPages = parseInt('{{pagination.pages}}');
  </script>
{{/if}}
</main>
